<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android "
    android:id="@+id/wallet_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:contentDescription="@string/privacy_polilcy_english"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layoutDirection="ltr"
    app:cardElevation="13dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/wallet_item_gradient_selector">
                <TextView
                    android:id="@+id/w_m_publicId_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publicId_persian"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/w_m_publicId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K.z146486946546"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize"
                    android:layout_toStartOf="@id/w_m_publicId_label"
                    android:layout_alignBaseline="@id/w_m_publicId_label"
                    android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/w_m_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="1.1dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="5"
                            android:src="@drawable/icon"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            />
                    </LinearLayout>

                <TextView
                    android:id="@+id/w_m_label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/w_m_publicId_label"
                    android:text="@string/hint_name_persian"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/iransans"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/w_m__name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schools"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize"
                    android:fontFamily="@font/iransans"
                    android:layout_marginTop="5dp"
                    android:layout_toStartOf="@id/w_m_label_name"
                    android:layout_alignBaseline="@id/w_m_label_name"
                    android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/w_m_label_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/wallet_balance_persian"
            android:textSize="13sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/normal_margin"
            android:fontFamily="@font/iransans"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            />

        <TextView
            android:id="@+id/w_m_wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1,546,465"
            android:textSize="@dimen/small_textSize"
            android:layout_alignParentBottom="true"
            android:layout_alignBaseline="@+id/w_m_label_balance"
            android:layout_toStartOf="@id/w_m_label_balance"
            android:layout_marginStart="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>