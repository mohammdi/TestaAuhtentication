<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android "
    android:id="@+id/wallet_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:contentDescription="@string/privacy_polilcy_english"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layoutDirection="ltr"
    app:cardElevation="13dp"
    >

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:background="@color/bg_main">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/publicId_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="public Id :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize" />

                <TextView
                    android:id="@+id/publicId_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K.z146486946546"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/publicId_lable"
                    android:layout_alignBaseline="@id/publicId_lable"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/name_wallet_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="name :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize" />

                <TextView
                    android:id="@+id/name_wallet_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="schools"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_textSize"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/name_wallet_Label"
                    android:layout_alignBaseline="@id/name_wallet_Label"
                    android:layout_marginStart="10dp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:src="@drawable/ic_delete"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            android:src="@drawable/ic_edite"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/delete_icon"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/investory_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="investory:"
            android:textSize="@dimen/small_textSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/investor_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1,546,465"
            android:textSize="@dimen/small_textSize"
            android:layout_alignParentBottom="true"
            android:layout_alignBaseline="@+id/investory_label"
            android:layout_toRightOf="@id/investory_label"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>