<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android "
    android:id="@+id/wallet_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:orientation="horizontal"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="9">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_list_seperator_shape"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/pk_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/iransans"
                android:textColor="@color/bg_register"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/pk_publicId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/iransans"
                android:textColor="@color/input_register_hint"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/pk_type"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/pk_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_register"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/iransans"
                android:layout_toRightOf="@+id/pk_amount_label"
                android:layout_below="@id/pk_type"
                android:layout_marginLeft="10dp" />


            <TextView
                android:id="@+id/pk_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="افغانی"
                android:textSize="8dp"
                android:fontFamily="@font/iransans"
                android:textColor="@color/input_register_hint"
                android:layout_alignBaseline="@+id/pk_amount"/>



            <TextView
                android:id="@+id/pk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_register"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_alignBaseline="@+id/pk_date"
                android:layout_toRightOf="@id/pk_date"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/pk_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_register"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/normal_margin"
                android:fontFamily="@font/iransans"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/pk_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_register"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/normal_margin"
                android:fontFamily="@font/iransans"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pk_icon_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>