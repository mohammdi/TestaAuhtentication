<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QRCode"
    android:weightSum="20"
    android:gravity="center"
    android:background="@drawable/spinner_border"
    android:layout_marginBottom="100dp"
    >

    <ImageView
        android:id="@+id/menu_bar_qr_code_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_real_qr_code"
        android:layout_weight="13"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/menu_bar_qr_code_image"
        android:background="@drawable/image_profile_shape"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/menu_bar_qr_code_share"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:src="@drawable/ic_wight_share"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            />

    </LinearLayout>

</LinearLayout>