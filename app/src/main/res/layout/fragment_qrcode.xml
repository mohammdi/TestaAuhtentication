<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QRCode"
    android:weightSum="20"
    >

    <ImageView
        android:id="@+id/menu_bar_qr_code_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_real_qr_code"
        android:layout_weight="18"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/menu_bar_qr_code_image"
        android:background="@drawable/image_profile_shape"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.2"
        android:weightSum="10">
        <ImageView
            android:id="@+id/menu_bar_qr_code_share"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/calm_bg_login"
            android:layout_weight="10"
            android:src="@drawable/ic_share"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            />

    </LinearLayout>

</LinearLayout>