<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QRCode"
    android:weightSum="20"
    android:gravity="center"
    android:background="@drawable/bold_border_green"
    android:layout_marginBottom="100dp"
    >

    <ImageView
        android:id="@+id/menu_bar_qr_code_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_real_qr_code"
        android:layout_weight="13"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
        <TextView
            android:id="@+id/p_qr_code_share"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_qrCode_persian"
            android:textSize="17dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="@font/iransans"
            android:src="@drawable/ic_wight_share"
            android:layout_gravity="center"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p_qr_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/bg_Dark_main"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/p_qr_link_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/home_balance"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_share_blue" />

    </LinearLayout>


</LinearLayout>